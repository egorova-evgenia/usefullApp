<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/feedFragment"
    android:id="@+id/nav_main">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.myapp.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed">

        <action
            android:id="@+id/action_feedFragment_to_editFragment"
            app:destination="@id/editFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_feedFragment_to_onePostFragment"
            app:destination="@id/onePostFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_feedFragment_to_EventsFragment"
            app:destination="@id/eventsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_feedFragment_to_userFragment"
            app:destination="@id/userFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_feedFragment_to_imageFragment"
            app:destination="@id/OneImageFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_feedFragment_to_videoFragment"
            app:destination="@id/VideoFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_feedFragment_to_signInFragment"
            app:destination="@id/signInGroup"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_feedFragment_to_regFragment"
            app:destination="@id/RegFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            />

        <action
            android:id="@+id/action_feedFragment_to_AuthDialog"
            app:destination="@id/auth_dialog"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

    </fragment>

    <fragment
        android:id="@+id/OneImageFragment"
        android:name="ru.netology.myapp.OneImageFragment"
        android:label="fragment_one_image"
        tools:layout="@layout/fragment_one_image" />

    <fragment
        android:id="@+id/VideoFragment"
        android:name="ru.netology.myapp.OneVideoFragment"
        android:label="fragment_one_video"
        tools:layout="@layout/fragment_one_video" />

    <fragment
        android:id="@+id/editFragment"
        android:name="ru.netology.myapp.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" />

    <fragment
        android:id="@+id/onePostFragment"
        android:name="ru.netology.myapp.OnePostFragment"
        android:label="fragment_one_post"
        tools:layout="@layout/fragment_one_post">
    <action
        android:id="@+id/action_onePostFragment_to_editFragment"
        app:destination="@id/editFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out"
        />
        <action
            android:id="@+id/action_onePostFragment_to_FeedFragment"
            app:destination="@id/feedFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="ru.netology.myapp.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/card_user" />

    <fragment
        android:id="@+id/signInGroup"
        android:name="ru.netology.myapp.SignInFragment"
        android:label="fragment_signIn"
        tools:layout="@layout/fragment_sign_in" />

    <fragment
        android:id="@+id/RegFragment"
        android:name="ru.netology.myapp.RegFragment"
        android:label="fragment_reg"
        tools:layout="@layout/fragment_reg" />

    <dialog
        android:id="@+id/auth_dialog"
        android:name="ru.netology.myapp.viewmodel.AuthDialogFragment">

        <action
            android:id="@+id/action_dialog_to_signInFragment"
            app:destination="@id/signInGroup"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </dialog>

    <fragment
        android:id="@+id/eventsFragment"
        android:name="ru.netology.myapp.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_event">


        <action
            android:id="@+id/action_EventsFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

    </fragment>

</navigation>