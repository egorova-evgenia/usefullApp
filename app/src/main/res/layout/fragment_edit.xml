<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedFragment"
    >

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:id="@+id/bottomAppBar"
            android:background="?colorSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/content"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="@string/write_your_text_input"
                android:importantForAutofill="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editeModeText"
                />
<!--            tools:text="@sample/posts.json/data/content"-->

            <LinearLayout
                android:id="@+id/attachmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/photoPreview"
                    android:adjustViewBounds="true"
                    tools:srcCompat="@tools:sample/avatars[5]"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/videoGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/video"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:orientation="vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/simple_background" />

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center|center"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/baseline_play_circle_60" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/audioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/audioTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple_200"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Audio"
                        android:textAllCaps="true"
                        android:textColor="#FF37332D"
                        android:textSize="60sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/playOrPause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:background="@android:color/transparent"
                        android:contentDescription="play or pause"
                        android:src="@drawable/baseline_play_circle_60" />
                </FrameLayout>

                <Button
                    android:id="@+id/removePhoto"
                    android:text="DELETE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/editeModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textSize="24sp"
        android:text="@string/edit_mode"
        app:layout_constraintEnd_toStartOf="@+id/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editeModeText"
        app:layout_constraintTop_toTopOf="@id/editeModeText"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/editGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility= "gone"
        app:constraint_referenced_ids="editeModeText,cancel"
        tools:ignore="UnknownId" />


    <LinearLayout
        android:id="@+id/bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/Widget.MaterialComponents.BottomAppBar"

        android:background="?colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/takePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/photo_camera"
            android:background="?selectableItemBackground"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/pickPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:srcCompat="@drawable/photo_library"
            android:background="?selectableItemBackground"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/addVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            app:srcCompat="@drawable/baseline_video_call_24"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/addAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            app:srcCompat="@drawable/baseline_library_music_24"
            app:tint="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

